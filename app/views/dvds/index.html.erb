<p id="notice"><%= notice %></p>

<h1>Listing Dvds</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Genre</th>
      <th>Year</th>
      <th>Rating</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dvds.each do |dvd| %>
      <tr>
        <td><%= dvd.title %></td>
        <td><%= dvd.genre %></td>
        <td><%= dvd.year %></td>
        <td><%= dvd.rating %></td>
        <td><%= dvd.description %></td>
        <td><%= dvd.user.name %></td>
        <td><%= link_to 'Show', dvd %></td>
        <td><%= link_to 'Edit', edit_user_dvd_path(dvd.user, dvd) %></td>
        <td><%= link_to 'Destroy', user_dvd_path(dvd.user, dvd), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dvd', new_user_dvd_path(@user) if @user %>
